<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AriStore.Views.Detalle.DetalleClientePage"
             Style="{StaticResource App}"
             xmlns:local="clr-namespace:AriStore.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ImagenConverter x:Key="IntToImg" />
            <local:MxConverter x:Key="Mx" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".15*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width=".15*"/>
                </Grid.ColumnDefinitions>
                <!--Atras-->
                <Button Command="{Binding AtrasCommand}"
                        ImageSource="atras"
                        Style="{StaticResource atrasBoton}"/>
                <!--Cambiar contraseña-->
                <Label FontSize="25" 
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding Cliente.Nombre}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding Cliente.Paterno}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <!--Historial-->
                <Button Command="{Binding NavegarHistotrialCommand}"
                        Grid.Column="2"
                        ImageSource="historial"
                        Style="{StaticResource atrasBoton}"/>

            </Grid>
            <!--Deudas-->
            <Frame BackgroundColor="#71D670"
                   Margin="0, 20, 0, 0"/>
            <CollectionView ItemsSource="{Binding Detalles}">
                <CollectionView.EmptyView>
                    <Grid>
                        <Label HorizontalOptions="CenterAndExpand"
                               FontSize="Large"
                               VerticalOptions="CenterAndExpand"
                               Text="Sin datos"/>
                    </Grid>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions=".5*, *, *" 
                              RowDefinitions="*, 1"
                              Margin="0, 0, 0, 15">
                            <!--Imagen-->
                            <Image Scale=".5" 
                                   Source="{Binding IdTipo, Converter={StaticResource IntToImg}}"/>
                            <!--Fecha-->
                            <Label HorizontalOptions="Center" 
                                   Grid.Column="1" 
                                   Style="{StaticResource labelMedio}"
                                   Text="{Binding Fecha}"
                                   VerticalOptions="Center"/>
                            <!--Monto-->
                            <Label Grid.Column="2" 
                                   Style="{StaticResource labelMedio}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding IdTipo, Converter={StaticResource Mx}}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Monto}"/>
                                        <Span Text=" "/>
                                        <Span Text="MXN"/>
                                    </FormattedString>
                                </Label.FormattedText>

                            </Label>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--Total-->
            <Frame BackgroundColor="Black"
                   HeightRequest="1"
                   Padding="0"/>
            <Label FontSize="Large"
                   TextColor="Black">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Total:"/>
                        <Span Text=" "/>
                        <Span Text="200"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <!--Botones-->
            <Grid ColumnDefinitions="*, *"
                  RowDefinitions="Auto">
                <Button Command="{Binding NavegarNuevoPedidoCommand}" 
                        Text="Nuevo Pedido"
                        TextColor="Red"
                        Style="{StaticResource botonTransparentColor}"/>
                <Button Command="{Binding NavegarAbonoCommand}" 
                        Grid.Column="1" 
                        Text="Abonar"
                        Style="{StaticResource botonTransparentColor}"
                        TextColor="#71D670"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>